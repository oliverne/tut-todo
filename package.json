{
  "name": "tut-todo",
  "description": "Vanilla JavaScript Todo",
  "version": "9.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "run-p serve dev",
    "dev": "rollup -c --watch ",
    "clean": "shx rm -rf dist/*",
    "serve": "browser-sync public dist -w --port 8080",
    "build": "cross-env NODE_ENV=production rollup -c",
    "upload": "firebase deploy",
    "copy": "shx cp -r public/* dist/",
    "deploy": "run-s clean build copy upload"
  },
  "devDependencies": {
    "browser-sync": "2.26.7",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "firebase-tools": "8.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "rollup": "2.6.1",
    "rollup-plugin-sourcemaps": "0.5.0",
    "rollup-plugin-terser": "5.3.0",
    "shx": "0.3.2"
  }
}
